<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.brokenwallsstudios.autoluminosity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LightsActivity"
            android:label="@string/title_activity_lights" />
        <activity
            android:name=".RoomsActivity"
            android:label="@string/title_activity_rooms" />
        <activity
            android:name=".SchedulesActivity"
            android:label="@string/title_activity_schedules" />
        <activity
            android:name=".LightDetailsActivity"
            android:label="@string/title_activity_light_details" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".RoomDetailsActivity"
            android:label="@string/title_activity_room_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddScheduleActivity"
            android:label="@string/title_activity_add_schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScheduleDetailsActivity"
            android:label="@string/title_activity_schedule_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
